@page
@model ShoeListRazor.Pages.ShoeList.CreateModel

<br />
<h2 class="text-info">Create New Shoe</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Shoe.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Shoe.Name" class="form-control"/>
            </div>
            <span asp-validation-for="Shoe.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Shoe.Brand"></label>
            </div>
            <div class="col-6">
                <input asp-for="Shoe.Brand" class="form-control"/>
            </div>
            <span asp-validation-for="Shoe.Brand" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Shoe.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Shoe.ISBN" class="form-control"/>
            </div>
            <span asp-validation-for="Shoe.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

